<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:layout_margin="5dp"
    android:background="@drawable/background_menu_item">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/menu_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:src="@mipmap/ic_launcher" />

        <View
            android:id="@+id/linear_view"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/menu_icon"
            android:background="@color/cardview_dark_background"
            android:visibility="visible" />

        <com.millonarios.MillonariosFC.utils.FCMillonariosTextView
            android:id="@+id/menu_title"
            style="@style/StyleRobotoBold.Caption"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/linear_view"
            android:gravity="center_vertical"
            android:textSize="@dimen/menu_item" />
        

    </RelativeLayout>


</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- Player's image -->
    <ImageView
        android:id="@+id/player_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/millos_news_wm" />

    <View
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:background="@color/white" />

    <View
        android:layout_width="20dp"
        android:layout_height="10dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/triangle" />

    <LinearLayout
        android:id="@+id/lin_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical"
                android:paddingStart="5dp"
                android:paddingTop="30dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/place_of_birth"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_caption_size" />

                <com.BarcelonaSC.BarcelonaApp.utils.FCMillonariosTextView
                    android:id="@+id/ctv_player_nationality"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_caption_size" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/fecha_de_nacimiento"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_caption_size" />

                <com.BarcelonaSC.BarcelonaApp.utils.FCMillonariosTextView
                    android:id="@+id/ctv_player_birthdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_caption_size" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/weight"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_caption_size" />

                <com.BarcelonaSC.BarcelonaApp.utils.FCMillonariosTextView
                    android:id="@+id/ctv_weight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_caption_size" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/height"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_caption_size" />

                <com.BarcelonaSC.BarcelonaApp.utils.FCMillonariosTextView
                    android:id="@+id/ctv_player_height"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_caption_size" />

            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:background="@color/gray_transparent" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical"
                android:paddingTop="30dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="5dp"
                    android:text="@string/applause_player_performance"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_caption_size" />

                <RelativeLayout
                    android:id="@+id/content_game_calendar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toStartOf="@+id/ll_container_data_game"
                        android:gravity="center"

                        android:orientation="vertical">

                        <!-- Team 1 name -->
                        <com.BarcelonaSC.BarcelonaApp.utils.FCMillonariosTextView
                            android:id="@+id/team_one_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:text=""
                            android:textAlignment="center"
                            android:textAllCaps="true"
                            android:textColor="@color/white"
                            android:textSize="10dp" />

                        <ImageView
                            android:id="@+id/team_one_flag"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:adjustViewBounds="true" />
                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/ll_container_data_game"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="15dp"
                        android:gravity="center"
                        android:orientation="vertical">


                        <!-- Game's result -->
                        <com.BarcelonaSC.BarcelonaApp.utils.FCMillonariosTextView
                            android:id="@+id/result"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:layout_weight="1"
                            android:text=""
                            android:textAlignment="center"
                            android:textAllCaps="true"
                            android:textColor="@color/white"
                            android:textSize="10dp" />

                        <!-- Type of game -->
                        <com.BarcelonaSC.BarcelonaApp.utils.FCMillonariosTextView
                            android:id="@+id/ctv_game_league"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/white"
                            android:textSize="8dp" />

                        <!-- Type of game -->
                        <com.BarcelonaSC.BarcelonaApp.utils.FCMillonariosTextView
                            android:id="@+id/game_fecha_fifa"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/white"
                            android:textSize="8dp"
                            android:visibility="visible" />

                        <!-- Game's date -->
                        <com.BarcelonaSC.BarcelonaApp.utils.FCMillonariosTextView
                            android:id="@+id/game_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/white"
                            android:textSize="8dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_toEndOf="@+id/ll_container_data_game"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <!-- Team 2 name -->
                        <com.BarcelonaSC.BarcelonaApp.utils.FCMillonariosTextView
                            android:id="@+id/team_two_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:text=""
                            android:textAlignment="center"
                            android:textAllCaps="true"
                            android:textColor="@color/white"
                            android:textSize="10dp" />

                        <ImageView
                            android:id="@+id/team_two_flag"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:adjustViewBounds="true" />
                    </LinearLayout>


                </RelativeLayout>


                <ImageButton
                    android:id="@+id/btn_applaused"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:background="@color/transparent"
                    android:src="@drawable/applause_icn"
                    android:visibility="visible" />
            </LinearLayout>

        </RelativeLayout>
        <!-- Applauds player's performance -->

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lin_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingEnd="15dp"
        android:paddingStart="15dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.45"
            android:background="@drawable/background_applause_point"
            android:gravity="center"
            android:orientation="vertical">

            <com.BarcelonaSC.BarcelonaApp.utils.FCMillonariosTextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="4dp"
                android:text="@string/applause_last_game"
                android:textAlignment="center"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/font_caption_size" />

            <TextView
                android:id="@+id/TV_GameApplause"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:text="0"
                android:textAlignment="center"
                android:textColor="@color/colorAccent"
                android:textStyle="bold" />
        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="0.05" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.45"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/customTextView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="4dp"
                android:text="@string/applause_history"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="@dimen/font_caption_size" />

            <TextView
                android:id="@+id/TV_TotalApplause"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:text="0"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dl_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:id="@+id/ll_chat_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/banner"
            android:orientation="vertical">

            <include
                android:id="@+id/tb_menu"
                layout="@layout/toolbar_generic" />

            <include
                android:id="@+id/tb_sub_menu"
                layout="@layout/toolbar_sub_generic" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <include
                    android:id="@+id/include"
                    layout="@layout/toolbar_chat" />

                <com.BarcelonaSC.BarcelonaApp.utils.CustomViewPager
                    android:id="@+id/content_viewpager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/include" />

                <RelativeLayout
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_alignTop="@+id/include"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="60dp"
                    android:layout_marginTop="5dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/chat_avatar_receiver"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        app:civ_border_color="@color/colorAccent"
                        app:civ_border_width="1dp"
                        app:civ_border_overlay="true"
                        android:src="@drawable/silueta" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/circle_state"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginBottom="5dp"
                        android:layout_marginEnd="5dp"
                        android:src="@color/holo_green_dark"
                        android:visibility="gone" />
                </RelativeLayout>

            </RelativeLayout>

        </LinearLayout>

        <include
            android:id="@+id/banner"
            layout="@layout/footer"
            android:visibility="gone" />

    </RelativeLayout>

    <include
        android:id="@+id/drawerPane"
        layout="@layout/side_menu" />

</android.support.v4.widget.DrawerLayout>

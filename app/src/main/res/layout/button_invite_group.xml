<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content_button_invite_group"
    android:layout_width="160dp"
    android:layout_height="wrap_content"
    android:background="@drawable/btn_3_perfil"
    android:padding="5dp"
    android:visibility="visible">

    <ImageView
        android:id="@+id/icon_add_group"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@id/input_add_group"
        android:src="@drawable/invitar_grupo"
        android:tint="@color/colorPrimaryDark"
        android:visibility="visible" />

    <com.BarcelonaSC.BarcelonaApp.utils.FCMillonariosTextView
        android:id="@+id/input_add_group"
        style="@style/StyleRobotoBold"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="16dp"
        android:text="@string/invited_grupo"
        android:textAllCaps="true"
        android:textColor="@color/colorPrimaryDark"
        android:visibility="visible" />

</RelativeLayout>
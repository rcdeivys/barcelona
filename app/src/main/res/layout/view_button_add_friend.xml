<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_button_add_friend"
    android:layout_width="160dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/perfil_btn_2" />

    <ImageView
        android:id="@+id/icon_add"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/add"
        android:visibility="visible"
        android:layout_centerVertical="true"
        app:layout_constraintEnd_toStartOf="@+id/input_add_friend" />

    <com.millonarios.MillonariosFC.utils.FCMillonariosTextView
        android:id="@+id/input_add_friend"
        style="@style/StyleRobotoBold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@id/icon_add"
        android:layout_centerVertical="true"
        android:text="@string/add_friend"
        android:textAllCaps="true"
        android:visibility="visible" />

</RelativeLayout>
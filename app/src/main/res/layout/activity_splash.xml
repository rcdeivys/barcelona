<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentTop="true">

    <RelativeLayout
        android:id="@+id/rl_splash"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        android:visibility="gone">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_above="@+id/ll_title"
            android:layout_centerHorizontal="true"
            android:src="@drawable/logo_millos" />

        <LinearLayout
            android:id="@+id/ll_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_title1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#NosUne"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_title2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_title1"
                android:layout_centerHorizontal="true"
                android:text="LaMisma"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_title3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_title2"
                android:layout_centerHorizontal="true"
                android:text="Pasion"
                android:textSize="35sp"
                android:textStyle="bold" />
        </LinearLayout>


        <View
            android:id="@+id/v_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/ll_title"
            android:layout_margin="30dp"
            android:background="@color/colorPrimary_trans_50" />

        <TextView
            android:id="@+id/tv_millonarios"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/v_divider"
            android:layout_centerHorizontal="true"
            android:text="M I L L O N A R I O S F C"
            android:textSize="23sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_millonarios"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="3dp"
            android:text="A P P  O F I C I A L"
            android:textSize="12sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <include
        layout="@layout/dialog_juramento"
        android:visibility="visible" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimaryDark">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_profile"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/silueta"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:id="@+id/content_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@id/img_profile"
        android:background="@drawable/background_comment">

        <com.BarcelonaSC.BarcelonaApp.utils.FCMillonariosTextView
            android:id="@+id/user_name"
            style="@style/StyleRobotoBold.Subheading.White"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/textColorSecondary" />

        <hani.momanii.supernova_emoji_library.Helper.EmojiconTextView
            android:id="@+id/comment"
            emojiconSize="28sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_name"
            android:layout_margin="5dp"
            android:inputType="textMultiLine"
            android:maxLength="2000"
            android:textColor="@color/textColorSecondary"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/img_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/comment"
            android:layout_margin="5dp"
            android:adjustViewBounds="true"
            android:visibility="gone" />

    </RelativeLayout>

    <com.BarcelonaSC.BarcelonaApp.utils.FCMillonariosTextView
        android:id="@+id/remaining"
        style="@style/StyleRobotoRegular.BodyR"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_below="@id/content_comment"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:textColor="@color/colorAccent" />

    <com.BarcelonaSC.BarcelonaApp.utils.FCMillonariosTextView
        android:id="@+id/btn_clap"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_below="@id/content_comment"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@id/remaining"
        android:gravity="center"
        android:text="@string/clap_your_hands"
        android:textColor="@color/colorAccent"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/like_icon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_below="@id/content_comment"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:layout_toStartOf="@id/count_like"
        android:background="@drawable/icon_aplauso"
        app:layout_constraintEnd_toStartOf="@+id/count_like" />

    <com.BarcelonaSC.BarcelonaApp.utils.FCMillonariosTextView
        android:id="@+id/count_like"
        style="@style/StyleRobotoRegular.BodyR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/content_comment"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="9dp"
        android:text="0"
        android:textColor="@color/colorAccent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/content_comment" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content_news_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical">

    <include
        android:id="@+id/tb_sub_menu"
        layout="@layout/toolbar_sub_generic" />

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Imagen de la noticia -->
            <RelativeLayout
                android:id="@+id/content_iv_beneficios"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/iv_beneficio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:padding="5dp" />

            </RelativeLayout>

            <!-- TÃ­tulo de la noticia -->
            <com.millonarios.MillonariosFC.utils.FCMillonariosTextView
                android:id="@+id/tv_title_beneficio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:textColor="@color/white"
                android:textSize="@dimen/font_body_m_size"
                android:visibility="gone" />

        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/content_wv_beneficios"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <WebView
            android:id="@+id/wv_beneficios"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </RelativeLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_vr_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/rounder_item_new"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/content_header"
        android:layout_width="match_parent"
        android:layout_margin="5dp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:adjustViewBounds="true"
            android:visibility="gone" />

        <com.millonarios.MillonariosFC.utils.CustomVideoView
            android:id="@+id/texture_video_view"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:visibility="visible" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/content_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/content_header"
        android:orientation="horizontal"
        android:paddingBottom="8dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:gravity="center"
        android:paddingTop="8dp">

        <!-- Video's title -->
        <com.millonarios.MillonariosFC.utils.FCMillonariosTextView
            android:id="@+id/tv_title"
            style="@style/StyleRobotoBold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/white" />

        <!-- Video's title -->
        <com.millonarios.MillonariosFC.utils.FCMillonariosTextView
            android:id="@+id/tv_tag"
            style="@style/StyleRobotoRegular.Title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:gravity="end"
            android:visibility="gone"
            android:textColor="@color/gray" />

        <ImageView
            android:id="@+id/iv_share"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_above="@id/content_bottom"
            android:layout_alignParentRight="true"
            android:padding="2dp"
            android:src="@drawable/share_white" />

    </LinearLayout>

</RelativeLayout>